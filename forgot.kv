<forgot>:
    FloatLayout:
        size: root.width, root.height
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'F://smartkvproject1//img/first.jpg'




        MDLabel:
            text: "Forgot Password"
            font_size: 40
            halign: 'center'
            theme_text_color: "Custom"
            text_color: "red"
            pos_hint: {"center_x": 0.5,"center_y":.8}


        MDTextField:
            size_hint: .6,.05
            pos_hint: {"center_x": 0.5,"center_y":.7}
            icon_left: "email"
            mode: "rectangle"
            hint_text: "pls enter your email"


        MDRectangleFlatButton:
            size_hint: .3,.1
            text: "submit"
            font_size: 20
            pos_hint: {"center_y":.62,"center_x":.5}
            #text_color: 5, 5, 5, 5
            md_bg_color: "lightblue"
            on_press: app.root.current = 'log'

        MDRectangleFlatButton:
            text: "Back To LOG IN"
            font_size: 20
            pos_hint: {"center_x": .5,"center_y":.2}
            #text_color: 5, 5, 5, 5
            md_bg_color: "lightgreen"
            on_press:
                app.root.transition.direction = 'up'
                app.root.current = 'log'